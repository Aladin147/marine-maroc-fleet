generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id        Int       @id @default(autoincrement())
  name      String
  subdomain String    @unique
  settings  Json?
  status    String    @default("active")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  users     User[]
  drivers   Driver[]
  vehicles  Vehicle[]
  locations Location[]
  orders    Order[]
  messages  Message[]

  @@index([subdomain])
  @@index([status])
}

model User {
  id        Int       @id @default(autoincrement())
  companyId Int
  name      String
  email     String
  password  String
  role      String    @default("dispatcher")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  company          Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  sentMessages     Message[] @relation("UserSentMessages")
  receivedMessages Message[] @relation("UserReceivedMessages")

  @@unique([companyId, email])
  @@index([companyId])
}

model Driver {
  id              Int       @id @default(autoincrement())
  companyId       Int
  name            String
  phone           String
  email           String?
  password        String?
  status          String    @default("offline")
  currentLocation Json?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  deletedAt       DateTime?

  company          Company         @relation(fields: [companyId], references: [id], onDelete: Cascade)
  vehicles         Vehicle[]
  orders           Order[]
  trackingPoints   TrackingPoint[]
  sentMessages     Message[]       @relation("DriverSentMessages")
  receivedMessages Message[]       @relation("DriverReceivedMessages")

  @@unique([companyId, phone])
  @@index([companyId])
  @@index([status])
}

model Vehicle {
  id          Int       @id @default(autoincrement())
  companyId   Int
  plateNumber String
  make        String?
  model       String?
  year        Int?
  driverId    Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  driver  Driver? @relation(fields: [driverId], references: [id], onDelete: SetNull)
  orders  Order[]

  @@unique([companyId, plateNumber])
  @@index([companyId])
  @@index([driverId])
}

model Location {
  id        Int       @id @default(autoincrement())
  companyId Int
  name      String
  address   String?
  latitude  Float?
  longitude Float?
  type      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  company            Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  pickupOrders       Order[] @relation("PickupLocation")
  deliveryOrders     Order[] @relation("DeliveryLocation")

  @@index([companyId])
  @@index([latitude, longitude])
}

model Order {
  id                 Int       @id @default(autoincrement())
  companyId          Int
  orderNumber        String    @unique
  status             String    @default("new")
  pickupLocationId   Int?
  deliveryLocationId Int?
  driverId           Int?
  vehicleId          Int?
  scheduledAt        DateTime?
  startedAt          DateTime?
  completedAt        DateTime?
  notes              String?
  metadata           Json?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  deletedAt          DateTime?

  company          Company           @relation(fields: [companyId], references: [id], onDelete: Cascade)
  pickupLocation   Location?         @relation("PickupLocation", fields: [pickupLocationId], references: [id], onDelete: SetNull)
  deliveryLocation Location?         @relation("DeliveryLocation", fields: [deliveryLocationId], references: [id], onDelete: SetNull)
  driver           Driver?           @relation(fields: [driverId], references: [id], onDelete: SetNull)
  vehicle          Vehicle?          @relation(fields: [vehicleId], references: [id], onDelete: SetNull)
  proofOfDelivery  ProofOfDelivery?
  messages         Message[]

  @@index([companyId])
  @@index([status])
  @@index([driverId])
  @@index([companyId, status])
}

model TrackingPoint {
  id         Int      @id @default(autoincrement())
  driverId   Int
  latitude   Float
  longitude  Float
  accuracy   Float?
  speed      Float?
  heading    Float?
  recordedAt DateTime
  createdAt  DateTime @default(now())

  driver Driver @relation(fields: [driverId], references: [id], onDelete: Cascade)

  @@index([driverId])
  @@index([driverId, recordedAt])
}

model ProofOfDelivery {
  id                 Int      @id @default(autoincrement())
  orderId            Int      @unique
  recipientName      String?
  recipientSignature String?
  photos             Json?
  signatureUrl       String?
  notes              String?
  deliveredAt        DateTime
  createdAt          DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}

model Message {
  id           Int       @id @default(autoincrement())
  companyId    Int
  orderId      Int?
  fromUserId   Int?
  fromDriverId Int?
  toUserId     Int?
  toDriverId   Int?
  type         String    @default("text")
  content      String?
  audioUrl     String?
  duration     Int?
  isRead       Boolean   @default(false)
  readAt       DateTime?
  createdAt    DateTime  @default(now())

  company    Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  order      Order?  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  fromUser   User?   @relation("UserSentMessages", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser     User?   @relation("UserReceivedMessages", fields: [toUserId], references: [id], onDelete: Cascade)
  fromDriver Driver? @relation("DriverSentMessages", fields: [fromDriverId], references: [id], onDelete: Cascade)
  toDriver   Driver? @relation("DriverReceivedMessages", fields: [toDriverId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([orderId])
  @@index([fromUserId, toDriverId])
  @@index([fromDriverId, toUserId])
}
